def add_num(x,y):
    """this function adds two numbers"""
    return x+y
def multiply_num(x,y):
     """this function multiplies two numbers"""
     return x*y
    
def divide_num(x,y):
     """this function divides the two numbers"""
     return x/y
    
def subt_num(x,y):
     """this function subtracts two numbers"""
     return x-y
    
print("Please select the option for operation between two numbers")
print("Option1 for addition")
print("Option2 for multiplication")
print("Option3 for division")
print("Option4 for subtraction")
choice = int(input("enter the choice"))
x = float(input("enter the number one"))
y = float(input("enter the number two"))
if choice==1:
    print(f"the addition of {x} and {y} is",add_num(x,y))
elif choice==2:
    print(f"the multiplication of {x} and {y} is",multiply_num(x,y))
elif choice==3:
    print(f"the division  of {x} and {y} is",divide_num(x,y))
elif choice==4:
    print(f"the subtraction of {x} and {y} is",subt_num(x,y))
else:
    print("error in choice")
